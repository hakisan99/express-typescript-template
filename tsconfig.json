{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "types": ["jest","node"]
  },
  "exclude": ["node_modules", "./build/**/*", "src/seeds", "src/migrations", "__tests__"]
}
